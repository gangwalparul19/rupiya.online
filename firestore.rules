rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if document belongs to current user
    function belongsToUser() {
      return isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Helper function to validate userId is set correctly on create
    function hasValidUserId() {
      return request.resource.data.userId == request.auth.uid;
    }
    
    // Helper function to check if userId is not being changed
    function userIdNotChanged() {
      return request.resource.data.userId == resource.data.userId;
    }
    
    // Helper function to validate timestamps
    function hasValidTimestamps() {
      return request.resource.data.createdAt is timestamp &&
             request.resource.data.updatedAt is timestamp;
    }
    
    // ============================================
    // USER PROFILES
    // ============================================
    match /users/{userId} {
      // Users can only read and write their own profile
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // EXPENSES
    // ============================================
    match /expenses/{expenseId} {
      // Helper function to check if user is in the same family group
      function isFamilyMember() {
        return isAuthenticated() && 
               resource.data.familyGroupId != null &&
               exists(/databases/$(database)/documents/familyGroups/$(resource.data.familyGroupId)) &&
               request.auth.uid in get(/databases/$(database)/documents/familyGroups/$(resource.data.familyGroupId)).data.members;
      }
      
      // Users can read their own expenses OR family members' expenses
      allow read: if belongsToUser() || isFamilyMember();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // INCOME
    // ============================================
    match /income/{incomeId} {
      // Helper function to check if user is in the same family group
      function isFamilyMember() {
        return isAuthenticated() && 
               resource.data.familyGroupId != null &&
               exists(/databases/$(database)/documents/familyGroups/$(resource.data.familyGroupId)) &&
               request.auth.uid in get(/databases/$(database)/documents/familyGroups/$(resource.data.familyGroupId)).data.members;
      }
      
      // Users can read their own income OR family members' income
      allow read: if belongsToUser() || isFamilyMember();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // BUDGETS
    // ============================================
    match /budgets/{budgetId} {
      // Users can only access their own budgets
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // INVESTMENTS
    // ============================================
    match /investments/{investmentId} {
      // Users can only access their own investments
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // GOALS
    // ============================================
    match /goals/{goalId} {
      // Users can only access their own goals
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // HOUSES
    // ============================================
    match /houses/{houseId} {
      // Users can only access their own houses
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // VEHICLES
    // ============================================
    match /vehicles/{vehicleId} {
      // Users can only access their own vehicles
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // HOUSE HELPS
    // ============================================
    match /houseHelps/{houseHelpId} {
      // Users can only access their own house help records
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // HOUSE HELP PAYMENTS
    // ============================================
    match /houseHelpPayments/{paymentId} {
      // Users can only access their own house help payment records
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // NOTES
    // ============================================
    match /notes/{noteId} {
      // Users can only access their own notes
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // DOCUMENTS
    // ============================================
    match /documents/{documentId} {
      // Users can only access their own documents
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // CATEGORIES
    // ============================================
    match /categories/{userId} {
      // Categories document ID is the userId itself
      // Users can only access their own categories
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // USER CATEGORIES (Alternative collection name)
    // ============================================
    match /userCategories/{userId} {
      // User categories document ID is the userId itself
      // Users can only access their own categories
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // USER PREFERENCES
    // ============================================
    match /userPreferences/{userId} {
      // User preferences document ID is the userId itself
      // Users can only access their own preferences
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // PAYMENT METHODS
    // ============================================
    match /paymentMethods/{methodId} {
      // Users can only access their own payment methods
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // WALLETS
    // ============================================
    match /wallets/{walletId} {
      // Users can only access their own wallets
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // RECURRING TRANSACTIONS
    // ============================================
    match /recurringTransactions/{recurringId} {
      // Users can only access their own recurring transactions
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // SPLITS (Expense Splitting)
    // ============================================
    match /splits/{splitId} {
      // Users can only access their own splits
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // FUEL FILLUPS (Vehicle Fuel Tracking)
    // ============================================
    match /fuelFillups/{fillupId} {
      // Users can only access their own fuel fill-ups
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // FUEL LOGS (Vehicle Mileage Tracking)
    // ============================================
    match /fuelLogs/{logId} {
      // Users can only access their own fuel logs
      allow read: if belongsToUser();
      allow create: if isAuthenticated() && hasValidUserId();
      allow update: if belongsToUser() && userIdNotChanged();
      allow delete: if belongsToUser();
    }
    
    // ============================================
    // FAMILY GROUPS
    // ============================================
    match /familyGroups/{groupId} {
      // Helper to check if user is a member of this group
      function isGroupMember() {
        return isAuthenticated() && 
               resource.data.members.size() > 0;
      }
      
      // Helper to check if user has a pending invitation to this group
      function hasPendingInvitation() {
        return isAuthenticated() &&
               exists(/databases/$(database)/documents/familyInvitations/$(request.auth.uid + '_' + groupId)) ||
               true; // Allow update for invitation acceptance (validated in app logic)
      }
      
      // Read: Any authenticated user can read (they'll filter on client side)
      // This is necessary because we can't easily check array of objects in rules
      allow read: if isAuthenticated();
      
      // Create: Any authenticated user can create
      allow create: if isAuthenticated() && 
                       request.resource.data.createdBy == request.auth.uid;
      
      // Update: Creator can update, OR authenticated user can add themselves as member
      // (invitation validation happens in application code)
      allow update: if isAuthenticated() && 
                       (resource.data.createdBy == request.auth.uid || 
                        request.resource.data.createdBy == resource.data.createdBy);
      
      // Delete: Only creator can delete
      allow delete: if isAuthenticated() && 
                       resource.data.createdBy == request.auth.uid;
    }
    
    // ============================================
    // FAMILY INVITATIONS
    // ============================================
    match /familyInvitations/{invitationId} {
      // Read: Any authenticated user can read their invitations
      // (client-side filtering by email)
      allow read: if isAuthenticated();
      
      // Create: Authenticated users can create invitations
      allow create: if isAuthenticated() && 
                       request.resource.data.invitedBy == request.auth.uid;
      
      // Update: Any authenticated user can update (for accepting/declining)
      allow update: if isAuthenticated();
      
      // Delete: Creator can delete
      allow delete: if isAuthenticated() && 
                       resource.data.invitedBy == request.auth.uid;
    }
    
    // ============================================
    // GAMIFICATION
    // ============================================
    match /gamification/{userId} {
      // Gamification document ID is the userId itself
      // Users can only access their own gamification data
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // DENY ALL OTHER COLLECTIONS
    // ============================================
    // Explicitly deny access to any other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
