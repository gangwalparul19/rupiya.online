{
  "name": "rupiya",
  "version": "1.0.0",
  "description": "AI-powered personal finance and expense tracking platform",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "build:css": "node build-css-bundles.js",
    "build:full": "node build-css-bundles.js && node build.js",
    "verify:bundles": "node verify-bundles.js",
    "vercel-build": "node update-cache-version.js && node build-css-bundles.js && node build.js",
    "update-cache": "node update-cache-version.js",
    "deploy": "node scripts/increment-version.cjs && npm run update-cache && npm run build:full",
    "version:increment": "node scripts/increment-version.cjs",
    "precommit": "node scripts/increment-version.cjs && git add assets/js/config/version.js service-worker.js",
    "prepare": "git config core.hooksPath .git/hooks",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "analyze:css": "node build-css-bundles.js"
  },
  "keywords": [
    "finance",
    "expense-tracker",
    "budgeting"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "nodemailer": "^7.0.12"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
